// org/example/MessageService/MsgClient.java
package org.example.MessageService;

import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

@Configuration
@ComponentScan("org.example.MessageService")
public class MsgClient {
    public static void main(String[] args) {
        ApplicationContext context = new AnnotationConfigApplicationContext(MsgClient.class);

        MessageService messageService = context.getBean(MessageService.class);

        messageService.processMessage("Hello Brahmaiah, this is a test message!");
    }
}
